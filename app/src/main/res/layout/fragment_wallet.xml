<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homepage"
        android:gravity="center">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:weightSum="5"
            android:background="@drawable/textviewrounded">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical"
                >
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/myinfo"
                android:orientation="vertical"
                android:layout_weight=".3">
                <ProgressBar
                    android:layout_width="40dp"
                    android:layout_gravity="center"
                    android:id="@+id/progressbar8"
                    android:visibility="gone"
                    android:layout_height="40dp">
                </ProgressBar>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/wallet_balance">
                </ImageView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5">
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Balance $500"
                    android:textSize="35dp"
                    android:id="@+id/balance"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/textviewrounded"
                    android:textColor="@android:color/black"
                    android:padding="10dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="vertical">
                <Button
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:text="Deposit"
                    android:id="@+id/depositbutton1"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/roundedbuttons_black">
                </Button>
                <EditText
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:hint="Enter Amount"
                    android:visibility="gone"
                    android:id="@+id/deposittextview"
                    android:gravity="center"
                    android:background="@drawable/roundedtextview_black">
                </EditText>
                <Button
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:text="Deposit"
                    android:id="@+id/depositbutton"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/roundedbuttons_black">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>