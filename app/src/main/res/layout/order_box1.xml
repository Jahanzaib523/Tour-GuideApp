<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/orderboxcompleted"
    android:orientation="vertical"
    android:weightSum="5"
    android:layout_marginTop="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_weight="0.4">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/orderimage"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="bottom|top|center"
            android:background="@drawable/jahan">
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:id="@+id/inprogress"
            android:textColor="#46DD89"
            android:layout_gravity="center">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="0.2">
        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/nameofuser"
            android:hint="User Name"
            android:padding="10dp"
            android:gravity="bottom|top|center"
            android:drawableLeft="@drawable/face"
            android:background="@drawable/textviewrounded">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.2">
        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="Email Address"
            android:id="@+id/emailofguider"
            android:padding="10dp"
            android:gravity="bottom|top|center"
            android:drawableLeft="@drawable/email"
            android:background="@drawable/textviewrounded">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.2">
        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:hint="From"
            android:id="@+id/fromlocation"
            android:gravity="bottom|top|center"
            android:drawableLeft="@drawable/from"
            android:background="@drawable/textviewrounded">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.2">
        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:hint="To"
            android:id="@+id/tolocation"
            android:gravity="bottom|top|center"
            android:drawableLeft="@drawable/to"
            android:background="@drawable/textviewrounded">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.2">
        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:hint="Start Date"
            android:id="@+id/startdate"
            android:gravity="bottom|top|center"
            android:drawableLeft="@drawable/date_picker"
            android:background="@drawable/textviewrounded">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.2">
        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:hint="End Date"
            android:id="@+id/enddate"
            android:gravity="bottom|top|center"
            android:drawableLeft="@drawable/date_picker"
            android:background="@drawable/textviewrounded">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.2">
        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:hint="Dollars"
            android:id="@+id/paid"
            android:gravity="bottom|top|center"
            android:drawableLeft="@drawable/dollars"
            android:background="@drawable/textviewrounded">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.2">
        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:text="Completed"
            android:focusable="false"
            android:clickable="false"
            android:id="@+id/completeorderbtn"
            android:gravity="bottom|top|center"
            android:background="@drawable/completedbtndrawable">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/line">
    </LinearLayout>
</LinearLayout>