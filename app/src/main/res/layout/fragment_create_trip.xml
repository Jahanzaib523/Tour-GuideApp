<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homepage"
        android:gravity="center">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:weightSum="5"
            android:background="@drawable/textviewrounded">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create Trip"
                    android:fontFamily="casual"
                    android:textSize="30dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/myinfo"
                android:orientation="vertical"
                android:layout_weight=".7">
                <AutoCompleteTextView
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:id="@+id/fromm"
                    android:hint="From Lahore e.t.c"
                    android:textSize="15dp"
                    android:background="@drawable/roundedtextview_black"
                    android:drawableRight="@drawable/search_icon"
                    android:textColor="@android:color/black"
                    android:padding="10dp">
                </AutoCompleteTextView>
                <AutoCompleteTextView
                    android:id="@+id/too"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/roundedtextview_black"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"
                    android:drawableRight="@drawable/search_icon"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:hint="To Karachi e.t.c">
                </AutoCompleteTextView>
                <TextView
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:hint="Start"
                    android:id="@+id/startdatetext"
                    android:layout_marginTop="15dp"
                    android:focusable="false"
                    android:textSize="15dp"
                    android:background="@drawable/roundedtextview_black"
                    android:drawableRight="@drawable/date_picker"
                    android:textColor="@android:color/black"
                    android:padding="10dp"
                    android:soundEffectsEnabled="true">
                </TextView>
                <EditText
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:id="@+id/enddatetext"
                    android:layout_marginTop="15dp"
                    android:focusable="false"
                    android:soundEffectsEnabled="true"
                    android:background="@drawable/roundedtextview_black"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"
                    android:drawableRight="@drawable/date_picker"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:hint="End">
                </EditText>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="Next"
                    android:id="@+id/gotocataloge"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/roundedbuttons_black">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="40dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/selected_thumb">
                </ImageView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/nonselected_thumb">
                </ImageView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/nonselected_thumb">
                </ImageView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>