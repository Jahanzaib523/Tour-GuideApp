<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.semester_project.smd_project.Activities.PayingbyCreditCard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/actionbar"
        >
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/barsid"
                android:src="@drawable/back">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safar"
                android:textColor="#444444"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="casual">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer"
                android:textColor="#0096D6"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="casual">
            </TextView>
        </LinearLayout>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionbar"
        android:background="@drawable/homepage"
        android:gravity="center">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:weightSum="5"
            android:background="@drawable/round_buttons">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".3">
                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Please, enter the card details and click pay to proceed futher. Thanks.">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="145dp"
                android:layout_gravity="center"
                android:layout_weight=".2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/creditcard"></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_weight=".7">
                <EditText
                    android:layout_width="260dp"
                    android:layout_height="50dp"
                    android:hint="4321 5678 XXXX XXXX"
                    android:gravity="center"
                    android:background="@drawable/roundedtextview_black"
                    android:padding="10dp"
                    android:textColor="#454545">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight=".8"
                >
                <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:hint="mm/dd/yyyy"
                    android:gravity="center"
                    android:padding="10dp"
                    android:background="@drawable/roundedtextview_black"
                    android:layout_weight="1"
                    android:textColor="#454545">
                </EditText>
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:hint="CCV"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:layout_weight="0.6"
                    android:background="@drawable/roundedtextview_black"
                    android:textColor="#454545">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight=".8"
                >
                <Button
                    android:layout_width="260dp"
                    android:layout_height="45dp"
                    android:text="Pay"
                    android:textColor="@android:color/white"
                    android:id="@+id/paybycardbtn"
                    android:background="@drawable/roundedbuttons_black">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>