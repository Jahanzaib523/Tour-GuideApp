<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.semester_project.smd_project.Activities.HomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:background="@drawable/homepage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.5">
        </LinearLayout>
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/homepagesafar">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Safar"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="casual">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer"
                    android:textColor="#0096D6"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:fontFamily="casual">
                </TextView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1.1">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:id="@+id/signuphomepage"
                android:background="@drawable/roundedbuttons_black"
                android:text="Sign Up"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white">
            </Button>
            <Button
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:id="@+id/signinhomepage"
                android:background="@drawable/round_buttons"
                android:text="Sign In"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="@android:color/black">
            </Button>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>